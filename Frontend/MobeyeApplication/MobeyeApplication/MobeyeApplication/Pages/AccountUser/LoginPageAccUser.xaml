<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobeyeApplication.Pages.LoginPageAccUser">
    <ContentPage.Content>
        <StackLayout Margin="20" Padding="20">
            <Image Source="mobey_logo.jpg" Margin="30"/>

            <Entry Placeholder="username" Margin="0,20" />
            <Entry Placeholder="password" Margin="0,20" IsPassword="True" />

            <Button Text="Login" Grid.Column="0" Margin="0,20,0,0" Clicked="OnLoginBtnClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>