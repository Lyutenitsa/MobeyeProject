<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobeyeApplication.Pages.AccountUser.BaseMasterDetail.AccountPage"
             Title="Account">
    <StackLayout Margin="20" BackgroundColor="White">
        <Label Text="{Binding Name}" FontSize="24" Padding="0,30,0,10" />
        <Label Text="{Binding Zipcode} " FontSize="24" Padding="0,10" />
        <Label Text="{Binding City}" FontSize="24" Padding="0,10" />
        <Label Text="{Binding Country}" FontSize="24" Padding="0,10" />
        <Label Text="{Binding Email}" FontSize="24" Padding="0,10" />
        <Label Text="{Binding Telephone}" FontSize="24" Padding="0,10" />
        <Label Text="{Binding Role}" FontSize="24" Padding="0,10" />
        <Button Text="Edit profile" Margin="0,10" Padding="0,10" FontSize="Medium"  BackgroundColor="#29590D" TextColor="White" Clicked="OnEditProfileButtonClicked"/>
    </StackLayout>
</ContentPage>